<Window x:Class="ChatbotGomarco.Vistas.VentanaConfiguracion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:viewmodelos="clr-namespace:ChatbotGomarco.ViewModelos"
        Title="锔 Configuraci贸n - Chatbot GOMARCO"
        Height="700" Width="900"
        MinHeight="600" MinWidth="800"
        WindowStartupLocation="CenterOwner"
        Icon="/Resources/gomarco-icon.ico"
        Background="{StaticResource ColorFondoGomarco}"
        ResizeMode="CanResize">

    <Window.Resources>
        <!-- Estilos espec铆ficos para la ventana de configuraci贸n -->
        <Style x:Key="EstiloSeccionConfiguracion" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#20000000" Direction="270" ShadowDepth="2" BlurRadius="8"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="EstiloTituloSeccion" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource ColorTextoGomarco}"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
        </Style>

        <Style x:Key="EstiloCampoConfiguracion" TargetType="StackPanel">
            <Setter Property="Margin" Value="0,0,0,16"/>
        </Style>

        <Style x:Key="EstiloEtiquetaCampo" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="{StaticResource ColorTextoGomarco}"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>

        <Style x:Key="EstiloDescripcionCampo" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="{StaticResource ColorTextoSecundarioGomarco}"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Encabezado -->
        <Border Grid.Row="0" Style="{StaticResource EstiloTarjetaChat}" Margin="16,16,16,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <materialDesign:PackIcon Grid.Column="0"
                                         Kind="Cog"
                                         Width="32" Height="32"
                                         Foreground="{StaticResource ColorAcentoGomarco}"
                                         VerticalAlignment="Center"/>
                
                <StackPanel Grid.Column="1" Margin="16,0,0,0" VerticalAlignment="Center">
                    <TextBlock Text="Configuraci贸n del Sistema"
                               Style="{StaticResource EstiloTextoSubtitulo}"
                               Margin="0"/>
                    <TextBlock Text="Personaliza el comportamiento del asistente de IA"
                               FontSize="12"
                               Foreground="{StaticResource ColorTextoSecundarioGomarco}"/>
                </StackPanel>

                <Button Grid.Column="2"
                        Style="{StaticResource EstiloBotonSecundario}"
                        Command="{Binding ComandoCerrar}"
                        ToolTip="Cerrar configuraci贸n"
                        Margin="8,0,0,0">
                    <materialDesign:PackIcon Kind="Close" Width="18" Height="18"/>
                </Button>
            </Grid>
        </Border>

        <!-- Contenido principal -->
        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      Margin="16,8">
            <StackPanel>
                
                <!-- Secci贸n: Configuraci贸n de IA -->
                <Border Background="White" CornerRadius="12" Padding="20" Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text=" Configuraci贸n de Inteligencia Artificial"
                                   FontSize="18" FontWeight="SemiBold"
                                   Foreground="{StaticResource ColorTextoGomarco}"
                                   Margin="0,0,0,16"/>
                        
                        <!-- Estado actual de IA -->
                        <Border Background="{Binding EstadoIABackground}" 
                                CornerRadius="8" 
                                Padding="16" 
                                Margin="0,0,0,16">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <materialDesign:PackIcon Grid.Column="0"
                                                         Kind="{Binding IconoEstadoIA}"
                                                         Width="24" Height="24"
                                                         Foreground="White"
                                                         VerticalAlignment="Center"/>
                                
                                <StackPanel Grid.Column="1" Margin="12,0,0,0">
                                    <TextBlock Text="{Binding EstadoIA}"
                                               FontWeight="SemiBold"
                                               Foreground="White"
                                               FontSize="14"/>
                                    <TextBlock Text="{Binding DescripcionEstadoIA}"
                                               Foreground="White"
                                               FontSize="12"
                                               Opacity="0.9"/>
                                </StackPanel>
                                
                                <Button Grid.Column="2"
                                        Style="{StaticResource EstiloBotonPrimario}"
                                        Command="{Binding ComandoConfigurarIA}"
                                        Background="Transparent"
                                        BorderBrush="White"
                                        Foreground="White">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="Cog" Width="16" Height="16" Margin="0,0,4,0"/>
                                        <TextBlock Text="Configurar"/>
                                    </StackPanel>
                                </Button>
                            </Grid>
                        </Border>

                        <!-- Campo API Key -->
                        <StackPanel Margin="0,0,0,16">
                            <TextBlock Text="Clave API de OpenAI"
                                       FontSize="14" FontWeight="Medium"
                                       Foreground="{StaticResource ColorTextoGomarco}"
                                       Margin="0,0,0,8"/>
                            <TextBlock Text="Ingresa tu clave API para habilitar el an谩lisis avanzado con GPT-4. La clave se mantiene solo durante esta sesi贸n por seguridad."
                                       FontSize="12" Foreground="{StaticResource ColorTextoSecundarioGomarco}"
                                       Margin="0,0,0,8" TextWrapping="Wrap"/>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <PasswordBox Grid.Column="0"
                                            x:Name="PasswordBoxAPIKey"
                                            materialDesign:HintAssist.Hint="sk-..."
                                            Style="{StaticResource MaterialDesignOutlinedPasswordBox}"
                                            Margin="0,0,8,0"/>
                                
                                <Button Grid.Column="1"
                                        Style="{StaticResource EstiloBotonPrimario}"
                                        Command="{Binding ComandoGuardarAPIKey}"
                                        CommandParameter="{Binding ElementName=PasswordBoxAPIKey, Path=Password}">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="ContentSave" Width="16" Height="16" Margin="0,0,4,0"/>
                                        <TextBlock Text="Guardar"/>
                                    </StackPanel>
                                </Button>
                            </Grid>
                        </StackPanel>

                        <!-- Enlaces 煤tiles -->
                        <StackPanel Margin="0,0,0,16">
                            <TextBlock Text="Enlaces 煤tiles"
                                       FontSize="14" FontWeight="Medium"
                                       Foreground="{StaticResource ColorTextoGomarco}"
                                       Margin="0,0,0,8"/>
                            
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <Button Style="{StaticResource EstiloBotonSecundario}"
                                        Command="{Binding ComandoAbrirOpenAI}"
                                        Margin="0,0,8,0">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="OpenInNew" Width="16" Height="16" Margin="0,0,4,0"/>
                                        <TextBlock Text="Obtener API Key"/>
                                    </StackPanel>
                                </Button>
                                
                                <Button Style="{StaticResource EstiloBotonSecundario}"
                                        Command="{Binding ComandoAbrirDocumentacion}">
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="BookOpen" Width="16" Height="16" Margin="0,0,4,0"/>
                                        <TextBlock Text="Documentaci贸n"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Secci贸n: Configuraci贸n de Interfaz -->
                <Border Background="White" CornerRadius="12" Padding="20" Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text=" Configuraci贸n de Interfaz"
                                   FontSize="18" FontWeight="SemiBold"
                                   Foreground="{StaticResource ColorTextoGomarco}"
                                   Margin="0,0,0,16"/>
                        
                        <!-- Panel de archivos -->
                        <StackPanel Margin="0,0,0,16">
                            <TextBlock Text="Panel de archivos"
                                       FontSize="14" FontWeight="Medium"
                                       Foreground="{StaticResource ColorTextoGomarco}"
                                       Margin="0,0,0,8"/>
                            <TextBlock Text="Controla la visibilidad del panel de archivos en la interfaz principal."
                                       FontSize="12" Foreground="{StaticResource ColorTextoSecundarioGomarco}"
                                       Margin="0,0,0,8" TextWrapping="Wrap"/>
                            
                            <ToggleButton Style="{StaticResource MaterialDesignSwitchToggleButton}"
                                          IsChecked="{Binding MostrarPanelArchivos}"
                                          Command="{Binding ComandoAlternarPanelArchivos}"
                                          HorizontalAlignment="Left"/>
                        </StackPanel>

                        <!-- Panel de historial -->
                        <StackPanel Margin="0,0,0,16">
                            <TextBlock Text="Panel de historial"
                                       FontSize="14" FontWeight="Medium"
                                       Foreground="{StaticResource ColorTextoGomarco}"
                                       Margin="0,0,0,8"/>
                            <TextBlock Text="Controla la visibilidad del panel de historial de conversaciones."
                                       FontSize="12" Foreground="{StaticResource ColorTextoSecundarioGomarco}"
                                       Margin="0,0,0,8" TextWrapping="Wrap"/>
                            
                            <ToggleButton Style="{StaticResource MaterialDesignSwitchToggleButton}"
                                          IsChecked="{Binding MostrarPanelHistorial}"
                                          Command="{Binding ComandoAlternarPanelHistorial}"
                                          HorizontalAlignment="Left"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Secci贸n: Configuraci贸n de Seguridad -->
                <Border Background="White" CornerRadius="12" Padding="20" Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text=" Configuraci贸n de Seguridad"
                                   FontSize="18" FontWeight="SemiBold"
                                   Foreground="{StaticResource ColorTextoGomarco}"
                                   Margin="0,0,0,16"/>
                        
                        <!-- Cifrado de datos -->
                        <StackPanel Margin="0,0,0,16">
                            <TextBlock Text="Cifrado de datos sensibles"
                                       FontSize="14" FontWeight="Medium"
                                       Foreground="{StaticResource ColorTextoGomarco}"
                                       Margin="0,0,0,8"/>
                            <TextBlock Text="Los archivos y conversaciones se cifran autom谩ticamente para proteger la informaci贸n confidencial."
                                       FontSize="12" Foreground="{StaticResource ColorTextoSecundarioGomarco}"
                                       Margin="0,0,0,8" TextWrapping="Wrap"/>
                            
                            <Border Background="#E8F5E8" 
                                    CornerRadius="8" 
                                    Padding="12" 
                                    Margin="0,8,0,0">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="ShieldCheck" 
                                                             Width="20" Height="20"
                                                             Foreground="#059669"
                                                             VerticalAlignment="Center"/>
                                    <TextBlock Text="Cifrado AES-256 habilitado"
                                               Foreground="#059669"
                                               FontWeight="Medium"
                                               Margin="8,0,0,0"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>

                        <!-- Limpieza autom谩tica -->
                        <StackPanel Margin="0,0,0,16">
                            <TextBlock Text="Limpieza autom谩tica"
                                       FontSize="14" FontWeight="Medium"
                                       Foreground="{StaticResource ColorTextoGomarco}"
                                       Margin="0,0,0,8"/>
                            <TextBlock Text="Los archivos temporales se eliminan autom谩ticamente al cerrar la aplicaci贸n."
                                       FontSize="12" Foreground="{StaticResource ColorTextoSecundarioGomarco}"
                                       Margin="0,0,0,8" TextWrapping="Wrap"/>
                            
                            <Border Background="#E8F5E8" 
                                    CornerRadius="8" 
                                    Padding="12" 
                                    Margin="0,8,0,0">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="DeleteSweep" 
                                                             Width="20" Height="20"
                                                             Foreground="#059669"
                                                             VerticalAlignment="Center"/>
                                    <TextBlock Text="Limpieza autom谩tica habilitada"
                                               Foreground="#059669"
                                               FontWeight="Medium"
                                               Margin="8,0,0,0"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Secci贸n: Informaci贸n del Sistema -->
                <Border Background="White" CornerRadius="12" Padding="20" Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="癸 Informaci贸n del Sistema"
                                   FontSize="18" FontWeight="SemiBold"
                                   Foreground="{StaticResource ColorTextoGomarco}"
                                   Margin="0,0,0,16"/>
                        
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Informaci贸n de la aplicaci贸n -->
                            <StackPanel Grid.Column="0" Margin="0,0,8,0">
                                <TextBlock Text="Versi贸n de la aplicaci贸n"
                                           Style="{StaticResource EstiloEtiquetaCampo}"/>
                                <TextBlock Text="Chatbot GOMARCO v2.0.0"
                                           FontSize="14"
                                           Foreground="{StaticResource ColorTextoGomarco}"/>
                                
                                <TextBlock Text="Framework"
                                           Style="{StaticResource EstiloEtiquetaCampo}"
                                           Margin="0,16,0,0"/>
                                <TextBlock Text=".NET 8.0 Desktop"
                                           FontSize="14"
                                           Foreground="{StaticResource ColorTextoGomarco}"/>
                                
                                <TextBlock Text="Desarrollado por"
                                           Style="{StaticResource EstiloEtiquetaCampo}"
                                           Margin="0,16,0,0"/>
                                <TextBlock Text="GOMARCO"
                                           FontSize="14"
                                           Foreground="{StaticResource ColorTextoGomarco}"/>
                            </StackPanel>
                            
                            <!-- Informaci贸n del sistema -->
                            <StackPanel Grid.Column="1" Margin="8,0,0,0">
                                <TextBlock Text="Sistema operativo"
                                           Style="{StaticResource EstiloEtiquetaCampo}"/>
                                <TextBlock Text="{Binding SistemaOperativo}"
                                           FontSize="14"
                                           Foreground="{StaticResource ColorTextoGomarco}"/>
                                
                                <TextBlock Text="Arquitectura"
                                           Style="{StaticResource EstiloEtiquetaCampo}"
                                           Margin="0,16,0,0"/>
                                <TextBlock Text="{Binding ArquitecturaSistema}"
                                           FontSize="14"
                                           Foreground="{StaticResource ColorTextoGomarco}"/>
                                
                                <TextBlock Text="Directorio de datos"
                                           Style="{StaticResource EstiloEtiquetaCampo}"
                                           Margin="0,16,0,0"/>
                                <TextBlock Text="{Binding DirectorioDatos}"
                                           FontSize="12"
                                           Foreground="{StaticResource ColorTextoSecundarioGomarco}"
                                           TextWrapping="Wrap"/>
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Barra de acciones -->
        <Border Grid.Row="2" Style="{StaticResource EstiloTarjetaChat}" Margin="16,8,16,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Button Style="{StaticResource EstiloBotonSecundario}"
                            Command="{Binding ComandoRestaurarConfiguracion}"
                            Margin="0,0,8,0">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Restore" Width="16" Height="16" Margin="0,0,4,0"/>
                            <TextBlock Text="Restaurar valores por defecto"/>
                        </StackPanel>
                    </Button>
                    
                    <Button Style="{StaticResource EstiloBotonSecundario}"
                            Command="{Binding ComandoExportarConfiguracion}">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Export" Width="16" Height="16" Margin="0,0,4,0"/>
                            <TextBlock Text="Exportar configuraci贸n"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Style="{StaticResource EstiloBotonSecundario}"
                            Command="{Binding ComandoCerrar}"
                            Margin="0,0,8,0">
                        <TextBlock Text="Cancelar"/>
                    </Button>
                    
                    <Button Style="{StaticResource EstiloBotonPrimario}"
                            Command="{Binding ComandoGuardarConfiguracion}">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="ContentSave" Width="16" Height="16" Margin="0,0,4,0"/>
                            <TextBlock Text="Guardar cambios"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window> 